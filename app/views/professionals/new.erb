<div class="px-5 mx-auto my-auto" style="max-width: 1000px">
  <h1 class="text-center big-text py-4">Professional Signup</h1>
  <div class="px-5 py-5 bg-light rounded shadow">
    <%= form_for @professional, html: { id: 'professionals-form' } do |f| %>
      <%= hidden_field_tag :rate, params[:rate]%>
        <div class="form-group row">
          <div class="col"><%= f.text_field :first_name,  class: 'form-control', required: true, placeholder: 'First Name' %></div>
          <div class="col"><%= f.text_field :last_name,  class: 'form-control', required: true, placeholder: 'Last Name' %></div>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', required: true, placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', required: true, placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <%= f.select :type, Professional::TYPES, { prompt: "Professional Type" }, { class: "form-control", required: true } %>
        </div>
        <div class="form-group">
          <div id="card-element">
            <!-- A Stripe Element will be inserted here. -->
          </div>
          <!-- Used to display form errors. -->
          <div id="card-errors" role="alert"></div>
        </div>
        <div class="form-group text-center">
          <%= f.submit 'Submit', class: "btn btn-green btn-lg w-50"%>
        </div>
    <% end %>
  </div>
</div>
