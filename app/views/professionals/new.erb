<%# Meta data about the page %>
<% title 'Health Professionals' %>
<% meta_tag :description, 'Calling all licensed health professionals. Grow your reach and sales with WeFit Health Professional.' %>
<%# Page content %>

<div class="health_bg">
    <!--top-->
    <div class="health_top">
        <%= link_to image_tag("logo-transparent.svg", class: 'logo-image', size: "118x45", alt: "WeFit"), root_path %>
        <h5>Health Professional</h5>
    </div>

    <div class="hamburger hamburger--boring" type="button">
        <div class="hamburger-box">
            <div class="hamburger-inner white"></div>
        </div>
    </div>

    <div id="mySidenav" class="sidenav">

        <p class="links">Menu</p>

        <div class="nav-list-box">
            <a href="#">Log In</a>
            <a href="#">Sign Up</a>
            <%= link_to 'Health Professionals', controller:'professionals', action:'new' %>
            <a href="#">Advertising</a>
            <a href="#">Pioneer Application</a>
            <a href="#">Contact Us</a>
            <a href="#">Download</a>
        </div>
        <div class="nav-connect-text">
            <p class="connect-text">Connect with us!</p>
        </div>
        <div class="social-media-links">
            <%= image_tag "facebook-icon-red.svg", class: "facebook-icon", alt: "FaceBook" %>
            <%= image_tag "instagram-icon-red.svg", class: "instagram-icon", alt: "Instagram" %>
            <%= image_tag "twitter-icon-red.svg", class: "twitter-icon", alt: "Twitter" %>
            <%= image_tag "linkedin-icon-red.svg", class: "linkedin-icon", alt: "LinkedIn" %>
            <%= image_tag "youtube-icon-red.svg", class: "youtube-icon", alt: "YouTube" %>
        </div>

        <div class="wefit-nav-logo">
            <%= image_tag "text-transparent-white.svg", class: "nav-logo", alt: "NavLogo" %>
        </div>
    </div>

    <div class="BlackBox">
        <h2>Grow your reach with</br>WeFit Health Professional</h2>
        <%= link_to "Sign Up", root_path, class: "signupButton" %>
    </div>

</div>

<div class="health_bg2">
    <h2>Poop</h2>


</div>



<script>

    function openNav() {

        document.getElementById("mySidenav").style.width = "250px";
        //document.getElementById("iphoneslide").style.left = "30%";
        //document.getElementById("rightForegroundSlides").style.left = "30%";
        //document.getElementById("whatiswefit").style.right = "320px";
    }

    function closeNav() {

        document.getElementById("mySidenav").style.width = "0px";
        //document.getElementById("iphoneslide").style.left = "50%";
        //document.getElementById("rightForegroundSlides").style.left = "30%";
        //document.getElementById("whatiswefit").style.right = "10px";
    }

    var hamburger = document.querySelector(".hamburger");
    hamburger.addEventListener("click", function() {

            if(hamburger.classList.contains("is-active")){
                hamburger.classList.toggle("is-active");
                closeNav();
            }else{
                hamburger.classList.toggle("is-active");
                openNav();
            }

    });

</script>
