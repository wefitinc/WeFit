<%# Meta data about the page %>
<% title 'Contact' %>
<% meta_tag :description, 'Weâ€™d love to hear from you!' %>
<%# Page content %>
<div id="contact-page">
	<div class="col-md-4 px-4 py-4 mx-auto my-auto bg-light border rounded-big shadow">
		<h3 class="text-center">Contact Us</h3>
		<%= form_tag '/contact', method: :post do %>
            <%= invisible_captcha :subtitle %>
			<div class="form-group"><%= text_field_tag :name, '', class: 'form-control', placeholder: 'Name', required: '' %></div>
			<div class="form-group"><%= email_field_tag :email, '', class: 'form-control', placeholder: 'Email', required: '' %></div>
			<div class="form-group"><%= text_area_tag :body, '', class: 'form-control', size: '3x4', placeholder: 'Message', required: '' %></div>
			<div class="form-group text-center"><%= submit_tag :Submit, class: 'btn btn-green btn-lg w-50' %></div>
		<% end %>
	</div>
</div>
