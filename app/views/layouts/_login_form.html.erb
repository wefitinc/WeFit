<% if flash[:login_notice] %>
  <div class="alert alert-danger" role="alert"><%= flash[:login_notice] %></div>
<% end %> 
<%= form_tag('/login', method: 'post') do |f| %>
  <div class="form-group">
    <%= text_field_tag :email, nil, class: 'form-control', required: '', placeholder: 'Email' %>
  </div>
  
  <div class="form-group">
    <%= password_field_tag :password, nil, class: 'form-control', required: '', placeholder: 'Password' %>
  </div>

  <div class="form-group">
    <p><font size="3">Forgot password?</font> <a href="#">Click here</a></p>
  </div>
  
  <div class="form-group">
    <%= submit_tag "Login", class: 'btn btn-green btn-sm w-1' %>
  </div> 
<% end %>
