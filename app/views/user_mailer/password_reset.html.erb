<section>
  <div class="container">
    <h3 class="text-center">Password reset</h3>
  </div>
  <div class="container">
    <p>Hi <b><%= @user.first_name %> <%= @user.last_name %></b>,</p>
    <p>To reset your password click the link below:</p>
    <div class="btn-container"><%= link_to "Reset password", edit_password_reset_url(@user.reset_token, email: @user.email), class: 'btn' %></div>
    <p>This link will expire in two hours.</p>
    <p>If you did not request your password to be reset, please ignore this email and your password will stay as it is.</p>
  </div>
</section>
