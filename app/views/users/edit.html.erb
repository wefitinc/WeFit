<% title 'The Social Network for All Things Health' %>
<% meta_tag :description, 'Join WeFit today, itâ€™s free! Post and attend local healthy activities, chat with licensed health professionals, join support groups, or post about health.' %>
<%# Page content %>
<div class="px-5 mx-auto my-auto" style="max-width: 1000px">
  <h1 class="text-center big-text py-4">Account Settings</h1>
  <div class="row bg-light rounded shadow">
    <!-- Left nav -->
    <nav class="nav flex-column nav-blocks col-3" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="tabs-account-info-tab" data-toggle="pill" href="#account-info" role="tab" aria-controls="account-info" aria-selected="true">Account Information</a>
      <a class="nav-link" id="tabs-login-verification-tab" data-toggle="pill" href="#login-verification" role="tab" aria-controls="login-verification" aria-selected="false">Login Verification</a>
      <a class="nav-link" id="tabs-profile-picture-tab" data-toggle="pill" href="#profile-picture" role="tab" aria-controls="profile-picture" aria-selected="false">Edit Profile Picture</a>
    </nav>
    <!-- Right content -->
    <div class="tab-content col-9 py-3 px-5">
      <!-- Account info panel -->
      <div class="tab-pane show active" id="account-info" role="tabpanel" aria-labelledby="tabs-account-info-tab">
        <h2 class="py-2">Account Information</h2>
        <%= form_for @user, url: 'account_settings' do |f| %>
          <div class="form-group row">
            <%= f.label :email, class: 'col-sm-3 col-form-label font-weight-bold' %>
            <div class="col-sm-9">
              <%= f.email_field :email, class: 'form-control', required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :password, class: 'col-sm-3 col-form-label font-weight-bold' %>
            <div class="col-sm-9">
              <%= f.password_field :password, class: 'form-control', required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :birthdate, class: 'col-sm-3 col-form-label font-weight-bold' %>
            <div class="col-sm-9 input-group">
              <%= f.date_select :birthdate, {
                start_year: Date.current.year,
                end_year: (Date.current.year - 100),
                order: [:month, :day, :year],
                prompt: { day: 'Birth day', month: 'Birth month', year: 'Birth year' }
              }, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :gender, class: 'col-sm-3 col-form-label font-weight-bold' %>
            <div class="col-sm-9">
              <%= f.select :gender, ActsAsGendered::GENDERS, { prompt: "Gender" }, { class: "form-control", required: true } %>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit 'Update', class: "btn btn-green btn-lg w-75" %>
          </div>
        <% end %>
      </div>
      <!-- Login verification panel -->
      <div class="tab-pane" id="login-verification" role="tabpanel" aria-labelledby="tabs-account-info-tab">
        <h2 class="py-2">Login Verification</h2>
      </div>
      <!-- Profile picture panel -->
      <div class="tab-pane" id="profile-picture" role="tabpanel" aria-labelledby="tabs-profile-picture-tab">
        <h2 class="py-2">Change Profile Picture</h2>
      </div>
    </div>
  </div>
</div>
