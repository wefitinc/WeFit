<h2 class="py-2">Account Information</h2>
<%# Error alerts %>
<% if @user.errors.any? %>
<div class="alert alert-warning" role="alert">
  <h4 class="alert-heading">Errors signing up!</h4>
  <% @user.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
  <% end %>
</div>
<% end %>
<%# User form %>
<%= form_for @user, url: 'account_settings' do |f| %>
  <%# Change email %>
  <div class="form-group row">
    <%= f.label :email, class: 'col-sm-2 col-form-label font-weight-bold' %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: 'form-control', required: true %>
    </div>
  </div>
  <%# Password %>
  <%# NOTE: Must be the same as the current password, changes require a password reset through email %>
  <div class="form-group row">
    <%= f.label :password, class: 'col-sm-2 col-form-label font-weight-bold' %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control', required: true, placeholder: 'Password' %>
    </div>
  </div>
  <%# Birthdate %>
  <div class="form-group row">
    <%= f.label :birthdate, class: 'col-sm-2 col-form-label font-weight-bold' %>
    <div class="col-sm-10 row mx-0">
      <%= f.date_select :birthdate, {
        start_year: Date.current.year,
        end_year: (Date.current.year - 100),
        order: [:month, :day, :year],
        prompt: { day: 'Birth day', month: 'Birth month', year: 'Birth year' }
      }, class: "form-control col-sm" %>
    </div>
  </div>
  <%# Gender %>
  <div class="form-group row">
    <%= f.label :gender, class: 'col-sm-2 col-form-label font-weight-bold' %>
    <div class="col-sm-10">
      <%= f.select :gender, ActsAsGendered::GENDERS, { prompt: "Gender" }, { class: "form-control", required: true } %>
    </div>
  </div>
  <%# Submit button %>
  <div class="form-group text-center">
    <%= f.submit 'Update', class: "btn btn-green btn-lg w-75" %>
  </div>
<% end %>
